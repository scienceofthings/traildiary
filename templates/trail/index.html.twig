{% extends 'base.html.twig' %}

{% block title %}Trail index{% endblock %}

{% block container %}
    <h1>Trail index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Directory</th>
                <th>GpxFileName</th>
                <th>GpxFile</th>
                <th>MarkerLatitude</th>
                <th>MarkerLongitude</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for trail in trails %}
            <tr>
                <td>{{ trail.id }}</td>
                <td>{{ trail.title }}</td>
                <td>{{ trail.description }}</td>
                <td>{{ trail.directory }}</td>
                <td>{{ trail.gpxFileName }}</td>
                <td>{{ trail.gpxFile }}</td>
                <td>{{ trail.markerLatitude }}</td>
                <td>{{ trail.markerLongitude }}</td>
                <td>
                    <a href="{{ path('trail_show', {'id': trail.id}) }}">show</a>
                    <a href="{{ path('trail_edit', {'id': trail.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('trail_new') }}">Create new</a>
{% endblock %}