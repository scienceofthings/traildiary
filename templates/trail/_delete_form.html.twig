<form method="post" action="{{ path('trail_delete', {'id': trail.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ trail.id) }}">
    <button class="btn">Delete</button>
</form>