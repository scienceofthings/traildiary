{% extends "::base.html.twig" %}

{% block title %}Trails{% endblock %}

{% block headline %}
{% endblock headline %}

{% block content_row %}
    <div class="row margin-top">
        {% for entity in entities %}
            <dl class="dl-horizontal col-md-6">
                <dt>{{ entity.title }}</dt>
                {% for tour in entity.tours %}
                    <dd class="list-group-item">
                        <a href="{{ path('tour_show', { 'id': tour.id }) }}">{{ tour.title }}</a>
                    </dd>
                {% endfor %}
            </dl>
        {% endfor %}

    </div>
    <div class="row">
        <div>
            <a href="{{ path('category_new') }}">
                Create a new category
            </a>
        </div>
        <div>
            <a href="{{ path('map_homepage') }}">
                Karte
            </a>
        </div>
    </div>
{% endblock content_row %}
