{% extends 'MopaBootstrapBundle::base.html.twig' %}

{% block body -%}
    <h1>Tour list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>                
                <th>Markerlat</th>
                <th>Markerlon</th>
                <th>Gpx</th>
                <th>Images</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tour_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.description }}</td>                
                <td>{{ entity.markerlat }}</td>
                <td>{{ entity.markerlon }}</td>
                <td><a href="{{ vich_uploader_asset(entity, 'gpx_file') }}">GPX</a></td>
                <td>
                    {% for image in entity.tourImages %}
                        {{ image.altText }}
                        <a href="{{ vich_uploader_asset(image, 'image') }}">Image</a>
                    {% endfor %}
                </td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tour_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tour_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tour_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
                
                <a href="{{ path('map_homepage') }}">
            Karte
</a>
    {% endblock %}
